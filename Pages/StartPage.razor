@page "/start"
<div class="container">

    @if (Owner == null)
    {
        <div class="form-container center">
            <h3 class="mb-2">Player information</h3>
            @* https://stackoverflow.com/questions/77125142/blazor-server-protectedsessionstorage-setasync-returns-task-cancled-exception-wh *@
            <div class="form">
                <div class="form-group">
                    <p>
                        <MatTextField @bind-Value="@_inputName" Label="Name" Id="playerName" Outlined="true"></MatTextField>
                    </p>
                    <MatButton Outlined="true" class="mt-2" Disabled="@string.IsNullOrEmpty(_inputName)"
                               @onclick="CreatePlayer">
                        Save
                    </MatButton>
                </div>
            </div>
        </div>
    }
    else
    {
        <MatH3 class="center">Hi @Owner.Name,</MatH3>
        <MatH3 class="center mb-2">What you want do want to do?</MatH3>

        <div class="center mt-2">
            <MatButton Outlined="true" class="btn btn-primary me-2" @onclick="CreateGame">
                Create Game
            </MatButton>

            <MatButton Outlined="true" class="btn btn-secondary" @onclick="PrepareToJoin">
                Join Game
            </MatButton>
            <MatButton Outlined="true" class="btn btn-tertiary" @onclick="ChangeName">
                Change Name
            </MatButton>
        </div>
    }
</div>